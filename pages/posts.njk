---
pagination: 
    data: ghost.posts
    size: 1
permalink: "/{{pagination.items[0].slug}}/"
layout: base.njk
---
<main>
    {% set post = pagination.items[0] %}
    <header class="post-header">
        <p><span class="toparticle">Article</span><span class="toptag">{{ post.primary_tag.name if post.primary_tag else "uncategorized" }}</span></p>

        <h1 class="post-title">{{post.title}}</h1>

        <section class="post-info">
            <a href="{{meta.url}}/authors/{{post.primary_author.slug}}"><img src= "{{post.primary_author.profile_image}}"/></a>
            <div>
                <a href="{{meta.url}}/authors/{{post.primary_author.slug}}"><p>{{post.primary_author.name}}</p></a>
                <p>{{post.published_at|ghostdate}} â€¢ {{post.reading_time}} mins</p>
            </div>
        </section>
    </header>

    {{post.html|fuckbr|safe}}
</main>